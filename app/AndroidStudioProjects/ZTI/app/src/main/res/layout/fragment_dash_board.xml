<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF0A04B"
    tools:context=".presentation.main_activity.fragment.DashBoardFragment">
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="ZTI"
        android:fontFamily="@font/irish"
        android:textSize="55dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/jacky"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/jacky"
        />
    <ImageView
        android:id="@+id/bell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/jacky"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/bell"
        />
    <TextView
        android:id="@+id/current_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Current Balance"
        android:fontFamily="@font/monster"
        android:textSize="35dp"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/rupees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_balance"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:text="RS.39475.47"
        android:fontFamily="@font/irish"
        android:textSize="35dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rupees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/balance"
        />
    <LinearLayout
        android:id="@+id/daily_task"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rupees"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:background="#FF183A1D"
        >
        <ImageView
            android:id="@+id/task"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/planner"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/daily_related_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY TASK"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#FFFFFFFF"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/deposit"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/rupees"
        app:layout_constraintLeft_toRightOf="@+id/daily_task"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#FF183A1D"
        >
        <ImageView
            android:id="@+id/bank"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/deposit"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/deposits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEPOSIT"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/with_draws"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_task"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:background="#FF183A1D"
        >
        <ImageView
            android:id="@+id/draws"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/draws"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WITH DRAWS"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textSize="18dp"
            android:textColor="#FFFFFFFF"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stats"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/deposit"
        app:layout_constraintLeft_toRightOf="@+id/daily_task"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#FF183A1D"
        >
        <ImageView
            android:id="@+id/stat"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/stats"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATISTICS"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="#FFFFFFFF"

            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>