<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/notification_bg"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZTI"
            android:textSize="30sp"
            android:fontFamily="@font/irish"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#FFCBCBCB"
            android:layout_marginHorizontal="5dp"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/deposit_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Task"
                android:textSize="20sp"
                android:fontFamily="@font/monster"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/approval_text"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/monster"
                android:text="Your daily task submission has been
approved."
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/date_approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday 01 March,2023"
                android:textSize="12sp"
                android:fontFamily="@font/monster"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                />

        </FrameLayout>
        <ImageView
            android:id="@+id/image_approval"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/sand"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>