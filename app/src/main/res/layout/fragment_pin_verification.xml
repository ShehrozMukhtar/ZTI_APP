<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFE1EEDD"
    tools:context=".presentation.auth_activity.fragments.pin_verification.PinVerificationFragment">

    <TextView
        android:id="@+id/rectangle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="ZTI"
        android:gravity="center"
        android:textSize="100dp"
        android:textColor="#183A1D"
        android:fontFamily="@font/irish"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:text="Verify Pin"
        android:layout_marginRight="20dp"
        android:textSize="28dp"
        android:textColor="#1c3c1f"
        android:fontFamily="@font/monster"
        />
    <TextView
        android:id="@+id/txt"
        android:layout_width="340dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="21dp"
        android:fontFamily="@font/monster"
        android:textAlignment="center"
        android:text="Please enter the four digit PIN
          we sent to your email"
        />
    <TextView
        android:id="@+id/box_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/box_1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/box_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintLeft_toRightOf="@id/box_1"
        android:background="@drawable/box_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/box_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintLeft_toRightOf="@id/box_2"
        android:background="@drawable/box_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/box_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintLeft_toRightOf="@id/box_3"
        android:background="@drawable/box_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="340dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/box_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circular2"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:text="Continue"
        android:textSize="27dp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_continue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="Not your account?"
        />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Cancel"
        android:textSize="22dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@+id/btn_continue"
        android:fontFamily="@font/monster"
        android:textColor="#FFF0A04B"        />
</androidx.constraintlayout.widget.ConstraintLayout>