<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circular"
        android:layout_marginHorizontal="15dp"
        android:weightSum="6"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZTI"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/irish"

            />
        <ImageView
            android:id="@+id/cross_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/sand"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#CBCBCB"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/bank_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/monster"
            android:text="Jazz Cash"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:textColor="#FF183A1D"
            />
        <TextView
            android:id="@+id/rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/monster"
            android:text="RS. 3600.00"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="#FFF0A04B"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/rightarrows"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>