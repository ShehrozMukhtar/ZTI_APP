<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main_activity.fragment.statistic_fragment.StatisticFragment">

    <LinearLayout
        android:id="@+id/txt_stat"
        android:layout_width="0dp"
        android:layout_height="101dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFF0A04B"
        >
        <ImageView
            android:id="@+id/backward"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/prev"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Statistics"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="35sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_stat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFE1EEDD"
        >
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="40dp"
                android:background="#FFF0A04B"
                android:orientation="horizontal"
             >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan 1"
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan 2"
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan 3"
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan 4"
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.30-0.33%"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.30-0.33%"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.30-0.33%"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.30-0.33%"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>