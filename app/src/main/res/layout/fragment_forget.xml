<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFE1EEDD"
    tools:context=".presentation.auth_activity.fragments.forget_fragment.ForgetFragment">

    <LinearLayout
        android:id="@+id/rectangle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/zti_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ZTI"
            android:fontFamily="@font/irish"
            android:textSize="130sp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:id="@+id/reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Forget Password"
            android:fontFamily="@font/monster"
            android:textSize="22sp"
            android:layout_marginRight="25dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rectangle2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Please enter your email to receive"
        android:fontFamily="@font/monster"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/instruction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/instruction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Forget Password instructions."
        android:fontFamily="@font/monster"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/circular"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/instruction2">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/email"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="E-mail"
            android:textSize="20dp"
            android:maxLines="1"
            android:background="@drawable/circular"

            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forget_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        android:text="Forget Passsword"
        android:textSize="20dp"
        android:background="@drawable/circular2"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/forget_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:text="Remember the password?"
        android:fontFamily="@font/monster"
        android:textSize="17sp"
        android:layout_marginLeft="-30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/acc"
        app:layout_constraintTop_toBottomOf="@id/forget_btn"
        android:layout_marginTop="60dp"
        android:textSize="18dp"
        android:text="Log In"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:fontFamily="@font/monster"
        android:textColor="#F0A04B"
        />

</androidx.constraintlayout.widget.ConstraintLayout>