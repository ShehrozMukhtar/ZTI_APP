<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF183A1D"
    tools:context=".presentation.main_activity.fragment.deposit_fragment.DepositFragment">

    <LinearLayout
        android:id="@+id/layout_daily_task"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:background="#FFF0A04B"
        >

        <ImageView
            android:id="@+id/backward"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/prev"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE DEPOSITS"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                />
            <ImageView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/rectanguler"
                android:layout_gravity="end"
                />
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/invest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_daily_task"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:text="Total Investment"
        android:textColor="#FFF0A04B"
        android:fontFamily="@font/irish"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/invest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:text="RS. 3798.56"
        android:textColor="#FFF0A04B"
        android:textSize="20dp"
        android:fontFamily="@font/irish"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rs"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/deposit_circular_2"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_fetch_deposit"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>